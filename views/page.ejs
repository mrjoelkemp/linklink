<html>
  <head>
    <style>
      .generated-link {
        display: none;
        position: fixed;
        top: 60px;
        left: 40px;
        z-index: 100000;
        padding: 10px;
        background: #ddd;
        border-radius: 4px;
        box-shadow: -1px -3px 43px 31px #DFDDDD;
      }
      .generated-link input {
        margin-top: 10px;
        width: 600px;
        font-size: 17px;
        padding: 5px;
        border-radius: 5px;
      }
      .generated-link span {
        font-size: 15px;
      }
    </style>
  </head>
  <body>
    <div class="generated-link">
      <span>Here's your <span class="first">Link</span><span class="last">Link</span>:</span>
      <br />
      <input></input>
    </div>

    <div class="instructions">
      <span> Click anywhere to create a link to that part of the page </span>
    </div>

    <div class="linklink-content">
      <%- content %>
    </div>

    <style>
      p:hover, *:hover {
        /*border: 3px solid blue;*/
      }
    </style>

    <script>
      (function () {
        'use strict';

        // TODO: Put JS here to quickly parse
        // and scroll to location
        var url = "<%= url %>",
            top = parseInt("<%= top %>", 10);

        if (url && top) {
          window.scrollTo(0, top);
        }
      })();

    </script>
    <script src="javascripts/vendor/jquery-2.1.1.min.js"></script>

    <script src="javascripts/page.js"></script>

  <body>
</html>