<html>
  <head>
    <link rel="stylesheet" href="stylesheets/page.css" />
  </head>

  <body>
    <div class="generated-link">
      <span>Here's your <span class="first">Link</span><span class="last">Link</span>:</span>
      <br />
      <input></input>
    </div>

    <div class="instructions">
      <span> Click anywhere to create a link to that part of the page </span>
    </div>

    <div class="linklink-content">
      <%- content %>
    </div>

    <script>
      (function () {
        // For quick parsing and scroll to location
        var url = "<%= url %>",
            top = parseInt("<%= top %>", 10);

        if (url && top) {
          window.scrollTo(0, top);
        }
      })();
    </script>
    <script src="javascripts/vendor/jquery-2.1.1.min.js"></script>

    <script src="javascripts/page.js"></script>

  <body>
</html>